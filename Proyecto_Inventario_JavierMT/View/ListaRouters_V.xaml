<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Inventario_JavierMT.View.ListaRouters_V"
             Title="Routers">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>



            <ScrollView Grid.Row="0">
                <StackLayout>
                    <ListView x:Name="MyListView"
            ItemsSource="{Binding listarouters}"
            SelectedItem="{Binding RouterSeleccionado}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Margin="10" Padding="20" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>

                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="Nombre" Grid.Column="0" Grid.Row="0"/>
                                        <Entry Text="{Binding dispositivo.nombre}" Grid.Column="1" Grid.Row="0" IsReadOnly="True" />
                                        <Label Text="Pulgadas" Grid.Column="0" Grid.Row="1"/>
                                        <Entry Text="{Binding num_puertos}" Grid.Column="1" Grid.Row="1" IsReadOnly="True" />
                                        <Label Text="Marca" Grid.Column="0" Grid.Row="2"/>
                                        <Entry Text="{Binding velocidad}" Grid.Column="1" Grid.Row="2" IsReadOnly="True" />
                                        <Label Text="Tipo" Grid.Column="0" Grid.Row="3"/>
                                        <Entry Text="{Binding rout_switch}" Grid.Column="1" Grid.Row="3"/>
                                        <Label Text="Wifi" Grid.Column="0" Grid.Row="4"/>
                                        <Entry Text="{Binding wifi}" Grid.Column="1" Grid.Row="4"/>
                                        <ImageButton Source="{OnPlatform UWP='Assets/borrar.png', Android='borrar.png'}" Grid.Row="1" Grid.Column="3"
                                        Clicked="Borrar"  Grid.RowSpan="2" IsVisible="{Binding activada}"/>
                                        <ImageButton Source="{OnPlatform UWP='Assets/inspeccionar.png', Android='inspeccionar.png'}" Grid.Row="1" Grid.Column="4"
                                        Clicked="Editar"  Grid.RowSpan="2" IsVisible="{Binding activada}"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </ScrollView>
            <ImageButton Source="{OnPlatform UWP='Assets/plus.png', Android='plus.png'}" Grid.Row="0"  WidthRequest="160" HeightRequest="70" Margin="10" HorizontalOptions="End" VerticalOptions="End" Clicked="Add"  />

        </Grid>

    </ContentPage.Content>
</ContentPage>
